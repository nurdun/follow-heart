					function returnData(haha){
						if (haha.return==1000) {
							window.location.reload();
						}
					}
				})
				
				setData("Return_travel",{heart_decompression_id:DecompressionId},aa)//旅游详情评论
				function aa(haha){
					console.log(haha);
